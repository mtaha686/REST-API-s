doctype
html 
    head 
        title Client Server Communication
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css",rel="stylesheet",integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi",crossorigin="anonymous")
    body 
        div(class="container")
            br
            ul(class="nav justify-content-center")
                li(class="nav-item")
                    a(class="nav-link",href="home") Home
                li(class="nav-item")
                    a(class="nav-link",href="see_country_universities") Country
                li(class="nav-item")
                    a(class="nav-link",href="search_university") University
            br
            h1 Search University
            br
            form(action="/university-form", method="GET")
                div(class="row g-3 mb-3")
                    div(class="col-sm")
                        h5 
                            label(for="university") University:
                    div(class="col-sm-10")
                        input(type="text", name="university", id="university")
                button(type="submit", class="btn btn-primary") Find
            hr
            div(class="row mb-3")
                div(class="col-1") 
                    h5 S. No.
                div(class="col")
                    h5 Name
                div(class="col")
                    h5 Web Page
            each uni, i in unis 
                div(class="row mb-3")
                    div(class="col-1 text-center")= i+1
                    div(class="col")= uni.name
                    div(class="col")= uni.webpage
        br
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js",integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3",crossorigin="anonymous")