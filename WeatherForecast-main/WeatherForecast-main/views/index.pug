doctype
html 
    head 
        title Using 3rd Party APIs
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css",rel="stylesheet",integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi",crossorigin="anonymous")
    body 
        div(class="container")
            br
            h1 Get Weather Updates
            br
            form(action="/weather-form", method="GET")
                div(class="row g-3 mb-3")
                    div(class="col")
                        label(for="location",class="form-label") Location
                    div(class="col")
                        label(for="email",class="form-label") Email
                    div(class="col")
                        label(for="phone",class="form-label") Phone
                div(class="row g-3 mb-3")
                    div(class="col")
                        input(type="text",class="form-control", id="location", name="location")
                    div(class="col")
                        input(type="email",class="form-control", id="email", name="email")
                    div(class="col")
                        input(type="tel",class="form-control", id="phone", name="phone")
                div(class="mb-3 text-center")
                    button(type="submit", class="btn btn-primary") Subscribe
            hr
            h4(class="text-center") #{message}
        br
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js",integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3",crossorigin="anonymous")